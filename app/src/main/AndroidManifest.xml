<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prathimad.ankushc.ballyhoo">

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="19"
        android:targetSdkVersion="22" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BallyhooLoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".navigation.ProfileNaviagtionActivity"
            android:label="@string/title_activity_profile_naviagtion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.PromotionViewActivity"
            android:label="@string/title_activity_promotion_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.PreferenceSelectionActivity"
            android:label="@string/title_activity_preference_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.PromotionsCardViewActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
